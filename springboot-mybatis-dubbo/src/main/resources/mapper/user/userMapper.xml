<?xml version="1.0"  encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mm.dev.dao.mapper.user.UserMapper">

    <resultMap id="userResultMap" type="com.mm.dev.entity.user.User">
        <id property="id" jdbcType="BIGINT" javaType="Long" column="id" />
        <result property="username" jdbcType="VARCHAR" javaType="String" column="username" />
        <result property="password" jdbcType="VARCHAR" javaType="String" column="password" />
    </resultMap>

    <sql id="selectClause">
        id, username, password
    </sql>

    <select id="findAll" resultMap="userResultMap">
        select
            <include refid="selectClause" />
        from user2
    </select>

    <select id="getUserAll" resultMap="userResultMap">
        select
            <include refid="selectClause" />
        from user2
        order by id desc
    </select>

    <insert id="save">
        INSERT INTO user2 (username, password) VALUES (#{username}, #{password})
    </insert>

</mapper>